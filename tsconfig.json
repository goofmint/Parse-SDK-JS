{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "lib": ["dom"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "types",
    "noImplicitAny": false,
    "allowJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
  },
  "include": [
    "src/*.ts"
  ]
}
